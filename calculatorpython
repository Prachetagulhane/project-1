first = input("enter first number:")
operator = input ("Enter operator(+,-,*,/,%) : ")
second = input ("enter second number:")

first = int(first)
second = int(second)
2
if operator =="+":
    print(first + second)
elif operator == "-":
    print(first - second)
elif operator == "*":
    print(first * second)
elif operator == "/":
    print(first / second)
elif operator == "%":
    print(first % second)
else:
    print("invalid operations")

